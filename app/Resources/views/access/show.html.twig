{% extends 'base.html.twig' %}

{% block body %}
    <h1>Access</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ access.id }}</td>
            </tr>
            <tr>
                <th>Accessnr</th>
                <td>{{ access.accessNr }}</td>
            </tr>
            <tr>
                <th>Filenr</th>
                <td>{{ access.fileNr }}</td>
            </tr>
            <tr>
                <th>Usernr</th>
                <td>{{ access.userNr }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('access_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('access_edit', { 'id': access.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
