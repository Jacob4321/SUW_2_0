{% extends 'base.html.twig' %}

{% block header %}
    <li><a href="{{ path('_main') }}">Main</a></li>
    <li><a href="{{ path('course_index') }}">Kursy</a></li>
    <li class="active"><a href="{{ path('user_index') }}">Użytkownicy</a></li>
    <li><a href="{{ path('file_index') }}">Wykłady</a></li>
{% endblock %}

{% block body %}
<div class="col-md-12">
    <h1>Student</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nazwa użytkownika</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Adres email</th>
                <td>{{ user.emailCanonical }}</td>
            </tr>
            <tr>
                <th>Data rejestracji</th>
                <td>{{ user.lastlogin|date("h:m d.m.Y", false) }}</td>
            </tr>
            <tr>
                <th>Rola w systemie</th>
                <td>
                    {% for role in user.roles %}
                        {{ role }} </br>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>


    <a class="btn btn-success btn-lg" href="{{ path('user_edit', { 'id': user.id }) }}" role="button">Edytuj</a>
    {{ form_start(delete_form) }}
        <input class="btn btn-danger btn-lg" type="submit" value="Usuń studenta">
    {{ form_end(delete_form) }}

    <hr>
    <a class="btn btn-primary btn-lg" href="{{ path('user_index') }}" role="button">Wróć do listy studentów</a>


</div>
{% endblock %}
