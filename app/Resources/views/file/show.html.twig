{% extends 'base.html.twig' %}

{% block header %}
    <li><a href="{{ path('_main') }}">Main</a></li>
    <li><a href="{{ path('course_index') }}">Kursy</a></li>
    <li><a href="{{ path('user_index') }}">Użytkownicy</a></li>
    <li class="active"><a href="{{ path('file_index') }}">Wykłady</a></li>
{% endblock %}

{% block body %}
<div class="col-md-12">
    <h1>Wykład</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ file.id }}</td>
            </tr>
            <tr>
                <th>Nazwa</th>
                <td>{{ file.nazwa }}</td>
            </tr>
            <tr>
                <th>Sciezka</th>
                <td>{{ file.sciezka }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-success btn-lg" href="{{ path('file_edit', { 'id': file.id }) }}" role="button">Edytuj</a>
    {{ form_start(delete_form) }}
    <input type="submit" class="btn btn-danger btn-lg" value="Usuń kurs">
    {{ form_end(delete_form) }}

    <hr>
    <a class="btn btn-primary btn-lg" href="{{ path('file_index') }}" role="button">Wróć do listy wykładów</a>
    
</div>
{% endblock %}
