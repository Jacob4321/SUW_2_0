{% extends 'base.html.twig' %}

{% block header %}
    <li><a href="{{ path('_main') }}">Main</a></li>
    <li class="active"><a href="{{ path('course_index') }}">Kursy</a></li>
    <li><a href="{{ path('user_index') }}">Użytkownicy</a></li>
    <li><a href="{{ path('lecture_index') }}">Wykłady</a></li>
{% endblock %}

{% block body %}
<div class="col-md-12">
    <h1>Kurs</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ course.id }}</td>
            </tr>
            <tr>
                <th>Nazwa</th>
                <td>{{ course.nazwa }}</td>
            </tr>
        </tbody>
    </table>


    <a class="btn btn-success btn-lg" href="{{ path('course_edit', { 'id': course.id }) }}" role="button">Edytuj</a>
    {{ form_start(delete_form) }}
        <input type="submit" class="btn btn-danger btn-lg" value="Usuń kurs">
    {{ form_end(delete_form) }}

    <hr>
    <a class="btn btn-primary btn-lg" href="{{ path('course_index') }}" role="button">Wróć do listy kursów</a>
</div>
{% endblock %}
