{% extends 'base.html.twig' %}

{% block header %}
    <li><a href="{{ path('_main') }}">Main</a></li>
    <li class="active"><a href="{{ path('course_index') }}">Kursy</a></li>
    <li><a href="{{ path('user_index') }}">Użytkownicy</a></li>
    <li><a href="{{ path('lecture_index') }}">Wykłady</a></li>
{% endblock %}

{% block body %}
<div class="col-md-12">
    <h1>Lista kursów</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nazwa</th>
                <th scope="col">Akcje</th>
            </tr>
        </thead>
        <tbody>
        {% for course in courses %}
            <tr>
                <th scope="row"><a href="{{ path('course_show', { 'id': course.id }) }}">{{ course.id }}</a></th>
                <td>{{ course.nazwa }}</td>
                <td>
                    <a class="btn btn-info btn-lg btn-sm" href="{{ path('course_show', { 'id': course.id }) }}" role="button">pokaż</a>
                    <a class="btn btn-info btn-lg btn-sm" href="{{ path('course_edit', { 'id': course.id }) }}" role="button">edytuj</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <a class="btn btn-primary btn-lg" href="{{ path('course_new') }}" role="button">Stwórz nowy kurs</a>
    <!--<a href="{{ path('course_new') }}">Create a new course</a>  -->
</div>
{% endblock %}
