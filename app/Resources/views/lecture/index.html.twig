{% extends 'base.html.twig' %}

{% block header %}
    <li><a href="{{ path('_main') }}">Main</a></li>
    <li><a href="{{ path('course_index') }}">Kursy</a></li>
    <li><a href="{{ path('user_index') }}">Użytkownicy</a></li>
    <li class="active"><a href="{{ path('lecture_index') }}">Wykłady</a></li>
    <li><a href="{{ path('downloadfile_index') }}">Logi</a></li>
{% endblock %}

{% block body %}
<div class="col-md-12">
    <h1>Lectures list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nazwa</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lecture in lectures %}
            <tr>
                <th scope="row"><a href="{{ path('lecture_show', { 'id': lecture.id }) }}">{{ lecture.id }}</a></th>
                <td>{{ lecture.nazwa }}</td>
                <td>
                    <a class="btn btn-info btn-lg btn-sm" href="{{ path('lecture_show', { 'id': lecture.id }) }}" role="button">pokaż</a>
                    <a class="btn btn-info btn-lg btn-sm" href="{{ path('lecture_edit', { 'id': lecture.id }) }}" role="button">edytuj</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <a class="btn btn-primary btn-lg" href="{{ path('lecture_new') }}" role="button">Dodaj wykład</a>

</div>
{% endblock %}
